{
  "backend": {
    "name": "github",
    "repo": "dominggo1999/erfudia",
    "branch": "master",
    "base_url": "https://erfudia.vercel.app/",
    "auth_endpoint": "api/auth"
  },
  "media_folder": "public/images/uploads",
  "public_folder": "/images/uploads",
  "collections": [
    {
      "format": "json",
      "name": "portfolio",
      "label": "Portfolio",
      "folder": "content/portfolio",
      "create": true,
      "slug": "{{slug}}",
      "identifier_field": "title",
      "fields": [
        {
          "label": "Unique Id (Autogenerated, don't fill)",
          "name": "id",
          "widget": "hidden",
          "required": false
        },
        {
          "label": "Title",
          "name": "title",
          "pattern": [
            "^.{3,100}$",
            "Must be between 3 and 100 chars"
          ],
          "widget": "string"
        },
        {
          "label": "Description",
          "name": "description",
          "widget": "text"
        },
        {
          "label": "Featured Image",
          "name": "thumbnail",
          "widget": "image",
          "choose_url": true
        },
        {
          "label": "Images",
          "name": "images",
          "widget": "image",
          "choose_url": true,
          "media_library": {
            "config": {
              "multiple": true
            }
          }
        },
        {
          "label": "Company Website",
          "name": "company-website",
          "widget": "string"
        },
        {
          "label": "Categories",
          "name": "categories",
          "widget": "select",
          "multiple": true,
          "options": [
            "Graphic Design",
            "Illustration",
            "Website development",
            "Website design",
            "Creative Direction"
          ],
          "default": [
            "Website design"
          ]
        }
      ]
    },
    {
      "format": "json",
      "name": "top-projects",
      "label": "Top Projects",
      "folder": "content/top-projects",
      "create": true,
      "slug": "top-projects",
      "identifier_field": "id",
      "fields": [
        {
          "label": "Unique Id (Autogenerated, don't fill)",
          "name": "id",
          "widget": "hidden",
          "required": false
        },
        {
          "label": "Top projects",
          "name": "list",
          "widget": "relation",
          "collection": "portfolio",
          "value_field": "title",
          "search_fields": [
            "title"
          ],
          "display_fields": [
            "title"
          ],
          "multiple": true,
          "max": 3,
          "min": 1
        }
      ]
    },
    {
      "format": "json",
      "name": "team-member",
      "label": "Team Member",
      "folder": "content/team-members",
      "create": true,
      "slug": "{{slug}}",
      "identifier_field": "name",
      "fields": [
        {
          "label": "Unique Id (Autogenerated, don't fill)",
          "name": "id",
          "widget": "hidden",
          "required": false
        },
        {
          "label": "Name",
          "name": "name",
          "pattern": [
            "^.{3,100}$",
            "Must be between 3 and 100 chars"
          ],
          "widget": "string"
        },
        {
          "label": "Profile Picture",
          "name": "image",
          "widget": "image",
          "choose_url": true
        },
        {
          "label": "Role",
          "name": "role",
          "widget": "select",
          "options": [
            "UI Designer",
            "Marketing",
            "Staff",
            "Front End Developer",
            "Back End Developer"
          ],
          "default": "Staff"
        }
      ]
    },
    {
      "format": "json",
      "name": "service",
      "label": "Services",
      "folder": "content/services",
      "create": true,
      "slug": "{{slug}}",
      "identifier_field": "title",
      "fields": [
        {
          "label": "Unique Id (Autogenerated, don't fill)",
          "name": "id",
          "widget": "hidden",
          "required": false
        },
        {
          "label": "Title",
          "name": "title",
          "pattern": [
            "^.{3,100}$",
            "Must be between 3 and 100 chars"
          ],
          "widget": "string"
        },
        {
          "label": "Description",
          "name": "description",
          "pattern": [
            "^.{3,300}$",
            "Must be between 3 and 300 chars"
          ],
          "widget": "text"
        }
      ]
    },
    {
      "format": "json",
      "name": "faq",
      "label": "Faq",
      "folder": "content/faqs",
      "create": true,
      "slug": "{{slug}}",
      "identifier_field": "question",
      "fields": [
        {
          "label": "Unique Id (Autogenerated, don't fill)",
          "name": "id",
          "widget": "hidden",
          "required": false
        },
        {
          "label": "Question",
          "name": "question",
          "pattern": [
            "^.{3,300}$",
            "Must be between 3 and 300 chars"
          ],
          "widget": "string"
        },
        {
          "label": "Answer",
          "name": "answer",
          "pattern": [
            "^.{3,300}$",
            "Must be between 3 and 300 chars"
          ],
          "widget": "text"
        }
      ]
    },
    {
      "format": "json",
      "name": "testimonial",
      "label": "Testimonial",
      "folder": "content/testimonials",
      "create": true,
      "slug": "{{slug}}",
      "identifier_field": "name",
      "fields": [
        {
          "label": "Unique Id (Autogenerated, don't fill)",
          "name": "id",
          "widget": "hidden",
          "required": false
        },
        {
          "label": "Name",
          "name": "name",
          "pattern": [
            "^.{3,100}$",
            "Must be between 3 and 300 chars"
          ],
          "widget": "string"
        },
        {
          "label": "Testimonial",
          "name": "testiomial",
          "pattern": [
            "^.{3,300}$",
            "Must be between 3 and 300 chars"
          ],
          "widget": "text"
        },
        {
          "label": "Company",
          "name": "company",
          "pattern": [
            "^.{3,100}$",
            "Must be between 3 and 300 chars"
          ],
          "widget": "string"
        }
      ]
    }
  ]
}